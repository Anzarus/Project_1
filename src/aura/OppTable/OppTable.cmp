<aura:component description="OppTable"
                implements="force:hasRecordId, flexipage:availableForAllPageTypes"
                controller="OppTableController">
    <!-- attributes -->
    <aura:attribute name="data" type="Object" default="There is no products in this opportunity"/>
    <aura:attribute name="columns" type="List"/>

    <!-- handlers-->
    <aura:handler name="init" value="{!this}" action="{!c.init}"/>
    <aura:handler name="needToRefreshRecord" event="c:NeedToRefreshUpdatedRecord" action="{!c.handleCompEvent}"/>

    <!-- the container element determine the height of the datatable -->
    <div style="height: max-content">
        <lightning:datatable
                columns="{!v.columns}"
                data="{!v.data}"
                keyField="id"
                hideCheckboxColumn="true"
                onrowaction="{!c.handleRowAction}"
                showRowNumberColumn="true"
        />
    </div>
    <div aura:id="ModalDiv">
        {!v.body}
    </div>
</aura:component>
